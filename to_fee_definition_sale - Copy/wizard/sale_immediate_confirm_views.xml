<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="view_sale_immediate_confirm" model="ir.ui.view">
		<field name="name">sale.immediate.confirm.form</field>
		<field name="model">sale.immediate.confirm</field>
		<field name="arch" type="xml">
			<form string="Immediate Confirm?">
				<group>
					<p>
						It is found that there could be Supplementary Fee(s) may apply to
						this order. Click
						<i>Compute Fees &amp; Confirm</i>
						then
						Odoo will compute all the supplementary fees that may applied to the
						order and confirm the order accordingly.
						<br />
						If you want to proceed to the confirmation without adding
						supplementary fees, please click
						<i>Confirm without Fee computation</i>
						.
					</p>
				</group>
				<footer>
					<button name="action_compute_supplementary_fees_and_confirm"
						string="_Compute Fees &amp; Confirm" type="object"
						class="btn-primary" />
					<button name="action_confirm_without_fees"
						string="_Confirm without Fees computation" type="object"
						class="btn-default" />
					<button string="Cancel" class="btn-default" special="cancel" />
				</footer>
			</form>
		</field>
	</record>
</odoo>