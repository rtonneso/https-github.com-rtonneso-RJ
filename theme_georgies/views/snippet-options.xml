<?xml version="1.0" encoding="utf-8" ?>
<odoo>

<template id="snippet_options" inherit_id="website.snippet_options">
  <xpath expr="//div[@data-js='CoverProperties']" position="after">

    <!-- Splash - Size -->
    <div data-selector=".li_s_splash">
      <we-collapse-area>
        <we-toggler>
        <i class="fa fa-fw fa-arrows-v"/> Size
        </we-toggler>
        <we-collapse>
          <we-button data-select-class="li-splash__short">Short</we-button>
          <we-button data-select-class="">Medium</we-button>
          <we-button data-select-class="li-splash__full-height">Full Height</we-button>
        </we-collapse>
      </we-collapse-area>
    </div>

    <!-- Buttons Section Ability to Delete  -->
    <div data-selector=".li_s_buttons">
    </div>

    <!-- Main Call To Action - Direction-->
    <div data-selector=".li_s_call">
      <we-collapse-area>
        <we-toggler>
          <i class="fa fa-fw fa-exchange"/>Text Position
        </we-toggler>
        <we-collapse>
          <we-button data-select-class="">Text First</we-button>
          <we-button data-select-class="li-call-copy__last">Text Last</we-button>
        </we-collapse>
      </we-collapse-area>
      <we-collapse-area>
        <we-toggler>
          <i class="fa fa=fw fa-adjust"/> Light / dark
        </we-toggler>
        <we-collapse>
          <we-button data-select-class="">Light</we-button>
          <we-button data-select-class="li-call__dark">Dark</we-button>
        </we-collapse>
      </we-collapse-area>
    </div>

  </xpath>

</template>

</odoo>