	<t t-name="OpenSaleOrderPopupWidget">
		<div class="modal-dialog">
			<div class="popup popup-confirm">
				<p class="title" style="background-color: rgb(110,200,155); color: #fff;">Created Sale Order</p>
				<div class="body">
					<div class='div-container'>
						<span>Created Sale Order is:</span>
						<span id="created_sales_order"><t t-esc="widget.options.sale_order"></t></span>
					</div>
				 </div>
				<div class="footer" style="background-color: rgb(110,200,155); color: #fff;">
