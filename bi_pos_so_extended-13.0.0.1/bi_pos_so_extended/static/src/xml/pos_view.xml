<?xml version="1.0" encoding="UTF-8"?>
<templates id="pos_sale" inherit_id="point_of_sale.template" xml:space="preserve">

	<t t-extend="SeeAllOrdersScreenWidget">
			<t t-jquery=".screen-content" t-operation="replace">
				<div class="screen-content" style="max-width: 1300px;">
					<section class="top-content">
						<span class='button back'>
							<i class='fa fa-angle-double-left'></i>
							Cancel
						</span>
						<div>
							<span class='button sale state' style="margin-left: -155px;" id='sale'><i class='fa fa-credit-card' style="margin-right: 5px;"></i>Done</span>
							<span class='button sent state' style="margin-left: -350px;" id='sent'><i class='fa fa-send' style="margin-right: 5px;"></i>Quotation Sent</span>
							<span class='button draft state' style="margin-left: -500px;" id='draft'><i class='fa fa-file' style="margin-right: 5px;"></i>Quotation</span>
							<span class='button my-order' style="margin-left: -45px;"  id='user'><i class='fa fa-user' style="margin-right: 5px;"></i>My Orders</span>
							<div style="position: absolute;line-height: 32px;padding: 3px 13px;font-size: 20px;background: rgb(230, 230, 230);margin: 12px;margin-left: 750px;">
								<span id="filter_order"></span>
								<span id="filter_state"></span>
							</div>
						</div>
						<span class='refresh-order button' style="margin-left: 385px;"  id='refresh'><i class='fa fa-refresh'></i></span>
						<span class='searchbox search-order' style="margin-left: 450px;">
							<input placeholder='Search Orders' />
							<span class='search-clear'></span>
						</span>
						<span class='searchbox'></span>
						
					</section>
					<section class="full-content">
						<div class='window touch-scrollable scrollable-y'>
							<section class='subwindow collapsed'>
								<div class='subwindow-container'>
									<div class='subwindow-container-fix client-details-contents'>
									</div>
								</div>
							</section>
							<section class='subwindow'>
								<div class='subwindow-container'>
									<div class='subwindow-container-fix touch-scrollable scrollable-y'>
										<table class='client-list'>
											<thead>
												<tr style="background-color: #7f82ac; color: #fff;">
													<th>Order Number</th>
													<th>Order Date</th>
													<th>Customer</th>
													<th>Saleperson</th>
													<th>Total</th>
													<th>State</th>
													<th>Import Order </th>
													<th>Print</th>
												</tr>
											</thead>
											<tbody class='client-list-contents'>
											</tbody>
										</table>
									</div>
								</div>
							</section>
						</div>
					</section>	
				</div>
				
			</t>
		</t>

	<t t-name="OrdersLine">
		<tr class='order-line-sale' t-att-id='order.id'>
			<td class='orders-line-name' t-att-id='order.id' style="cursor: pointer;"><t t-esc='order.name' /></td>
			<td class='orders-line-date' t-att-id='order.id' style="cursor: pointer;"><t t-esc='order.date_order' /></td>
			<td class='orders-line-partner' t-att-id='order.id' style="cursor: pointer;"><t t-esc='order.partner_id[1] or ""' /></td>
			<td class='orders-line-saleperson' t-att-id='order.id' style="cursor: pointer;"><t t-esc='order.user_id[1]' /></td>
			<td class='orders-line-tot' t-att-id='order.id' style="cursor: pointer;"><t t-esc='widget.format_currency(order.amount_total)' /></td>
			<td class='orders-line-state' t-att-id='order.id' style="cursor: pointer;">
				<t t-if="order.state == 'draft'">Quotation</t>
				<t t-if="order.state == 'sent'">Quotation Sent</t>
				<t t-if="order.state == 'sale'">Sale Order</t>
				<t t-if="order.state == 'done'">Locked</t>
				<t t-if="order.state == 'cancel'">Cancelled</t>
			</td>
			<td>
				<button class="sale-order" t-att-id='order.id' style="cursor: pointer; color: #fff; background-color: #7f82ac;"><i class="fa fa-refresh"></i> Import Order</button>
			</td>
			<td>
				<button class="print-sale-order" t-att-id='order.id' style="cursor: pointer; color: #fff; background-color: #7f82ac;"><i class="fa fa-print"></i></button>
			</td>
		</tr>
	</t>

	 <t t-name="CreateSalesOrderButtonWidget" name="Create Sales Order Button Widget">
		<div class="control-button button confirm" id="create_sales_order" style="background-color: #7f82ac; color: #fff;">
		   <i class="fa fa-shopping-cart"></i> Create Sales Order 
		</div>
	 </t>
	

